h1| Forms
form.contact-form.floating-labels
	fieldset
		legend Account Info
		.error-message
			p Please enter a valid email address
		.icon
			label.contact-label(for='contact-name') Name
			input#contact-name.user(type='text', name='contact-name', required='')
		.icon
			label.contact-label(for='contact-company') Company
			input#contact-company.company(type='text', name='contact-company')
		.icon
			label.contact-label(for='contact-email') Email
			input#contact-email.email(type='email', name='contact-email', required='')
	fieldset
		legend Project Info
		div
			h4 Budget
			p.contact-select.icon
				select.budget
					option(value='0') Select Budget
					option(value='1') < $5000
					option(value='2') $5000 - $10000
					option(value='3') > $10000
		div
			h4 Project type
			ul.contact-form-list
				li
					input#contact-radio-1(type='radio', name='radio-button', checked='')
					label(for='contact-radio-1') Choice 1
				li
					input#contact-radio-2(type='radio', name='radio-button')
					label(for='contact-radio-2') Choice 2
				li
					input#contact-radio-3(type='radio', name='radio-button')
					label(for='contact-radio-3') Choice 3
		div
			h4 Features
			ul.contact-form-list
				li
					input#contact-checkbox-1(type='checkbox')
					label(for='contact-checkbox-1') Option 1
				li
					input#contact-checkbox-2(type='checkbox')
					label(for='contact-checkbox-2') Option 2
				li
					input#contact-checkbox-3(type='checkbox')
					label(for='contact-checkbox-3') Option 3
		.icon
			label.contact-label(for='contact-textarea') Project description
			textarea#contact-textarea.message(name='contact-textarea', required='')
		div
			input(type='submit', value='Send Message')
